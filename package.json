{
  "name": "deskops",
  "version": "0.0.0",
  "description": "Construction & Demolition Recycling Facility Management System",
  "license": "MIT",
  "packageManager": "bun@1.2.0",
  "engines": {
    "node": "24.9.1",
    "bun": ">=1.2.0"
  },
  "scripts": {
    "build": "nx run-many -t build",
    "dev": "nx run-many -t dev",
    "lint": "nx run-many -t lint",
    "type-check": "nx run-many -t typecheck",
    "test": "nx run-many -t test",
    "test:e2e": "nx run-many -t test:e2e",
    "clean": "nx reset && nx run-many -t clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev",
    "db:seed": "bunx prisma db seed",
    "db:studio": "bunx prisma studio",
    "prepare": "husky install"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.18.0",
    "@prisma/client": "^6.18.0",
    "dotenv": "^17.2.3",
    "next": "16.0.0",
    "next-devtools-mcp": "^0.2.1",
    "prisma": "^6.18.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.8.0",
    "@next/eslint-plugin-next": "16.0.0",
    "@nx/devkit": "22.1.0-beta.0",
    "@nx/eslint": "22.1.0-beta.0",
    "@nx/eslint-plugin": "22.1.0-beta.0",
    "@nx/js": "22.1.0-beta.0",
    "@nx/next": "22.1.0-beta.0",
    "@nx/playwright": "22.1.0-beta.0",
    "@nx/workspace": "22.1.0-beta.0",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.11.1",
    "@swc/cli": "~0.7.8",
    "@swc/core": "~1.13.5",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "10.4.21",
    "eslint": "^9.8.0",
    "eslint-config-next": "16.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nx": "22.1.0-beta.0",
    "postcss": "8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "4.1.16",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {},
  "trustedDependencies": [
    "@clerk/shared",
    "@parcel/watcher",
    "@swc/core",
    "unrs-resolver"
  ]
}
